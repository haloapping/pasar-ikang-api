generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id        String   @id @default(ulid())
  username  String   @unique
  firstName String
  lastName  String?
  avatarUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id          String   @id @default(ulid())
  slug        String?  @unique
  name        String?  @unique
  imageUrl    String?
  price       Decimal?
  unit        String?
  description String?
  stock       Decimal?
  sold        Decimal?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
